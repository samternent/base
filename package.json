{
  "name": "sss",
  "version": "1.0.0",
  "description": "Simons Sweet Shop",
  "main": "index.js",
  "scripts": {
    "app-build": "rollup -c",
    "app-watch": "rollup -c -w",
    "start": "sirv public",
    "core-build": "tsc -p core/tsconfig.json",
    "core-watch": "tsc -p core/tsconfig.json -w",
    "core-test": "ava core/**/*.test.ts",
    "core-test-watch": "ava core/**/*.test.ts --watch",
    "postinstall": "npm run core-build"
  },
  "author": " <sam.ternent@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "ava": "^3.9.0",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.32",
    "postcss-load-config": "^2.1.0",
    "rollup": "^2.17.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "sass": "^1.26.8",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.23.2",
    "svelte-feather-icons": "^3.2.2",
    "svelte-preprocess": "^3.9.9",
    "tailwindcss": "^1.4.6",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.9.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
